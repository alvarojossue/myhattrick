<h1>Statement</h1>
	<h3><%= @the_statement.title %></h3>
	<img src="/assets/realmadrid.jpg">
	<p class="js-brief-description">Brief description</p>
	<p class="js-brief-description-content"><%= @the_statement.description %></p>
	<p><%= @the_statement.author %></p>
	<p> <%= @the_statement.date %></p>
	<div type="button" class="btn btn-primary js-agree" id="<%=@the_statement.id%>">Agree</div>
	<div type="button" class="btn btn-primary js-disagree" id="<%=@the_statement.id%>">Disagree</div>
	<p class="js-results"></p>

    <form class="js-submit">
      <div>
        <label for="comment">Comment</label>
        <input type="text" id="comment" placeholder="place your comment here">
      </div>
      <div> 
        <button type="submit">Add</button>
      </div>
    </form>

    <ul class="js-all-comments"></ul>
  

